<resources>
    <!-- Base application theme. -->
    <style name="Theme.CustomView2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="ticTacToeStyle">@style/GlobalTicTacToeFieldStyle</item>
    </style>

    <style name="DefaultTicTacToeFieldStyle">
        <item name="player1Color">#000000</item>
        <item name="player2Color">#880000</item>
        <item name="gridColor">#dfdfdf</item>
    </style>

    <style name="GlobalTicTacToeFieldStyle" parent="DefaultTicTacToeFieldStyle">
        <item name="player1Color">#0000ff</item>
    </style>

</resources>